{
  "name": "@neato/guider",
  "version": "0.0.1",
  "description": "Documentation site generator framework based on Next.js",
  "main": "./dist/index.js",
  "files": [
    "dist/**",
    "style.css",
    "loader.js"
  ],
  "exports": {
    "./client": {
      "import": {
        "types": "./dist/client.d.mts",
        "default": "./dist/client.mjs"
      },
      "require": {
        "types": "./dist/client.d.ts",
        "default": "./dist/client.js"
      }
    },
    "./theme": {
      "import": {
        "types": "./dist/theme.d.mts",
        "default": "./dist/theme.mjs"
      },
      "require": {
        "types": "./dist/theme.d.ts",
        "default": "./dist/theme.js"
      }
    },
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./loader": "./loader.js",
    "./style.css": "./style.css"
  },
  "eslintConfig": {
    "extends": [
      "@repo/eslint-config"
    ]
  },
  "prettier": "@repo/prettier-config",
  "scripts": {
    "build": "tsup && pnpm tailwind:build",
    "dev": "concurrently \"pnpm build:dev\" \"pnpm tailwind:dev\"",
    "build:dev": "tsup --watch",
    "tailwind:dev": "tailwindcss -i ./src/tailwind.css -o ./style.css --watch",
    "tailwind:build": "tailwindcss -i ./src/tailwind.css -o ./style.css --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "peerDependencies": {
    "next": ">=14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/extra-watch-webpack-plugin": "^1.0.6",
    "@types/react": "18.2.56",
    "@types/webpack": "^5.28.5",
    "concurrently": "^8.2.2",
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype": "^13.0.1",
    "tailwindcss": "^3.4.1",
    "tsup": "7.2.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@headlessui/react": "^1.7.18",
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/mdx": "^3.0.1",
    "@shikijs/transformers": "^1.1.7",
    "@theguild/remark-npm2yarn": "^0.3.0",
    "@vcarl/remark-headings": "^0.1.0",
    "approximate-number": "^2.1.1",
    "classnames": "^2.5.1",
    "extra-watch-webpack-plugin": "^1.0.3",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "rehype-pretty-code": "^0.13.0",
    "remark-frontmatter": "^5.0.0",
    "remark-heading-id": "^1.0.1",
    "shiki": "^1.1.7",
    "tailwindcss-themer": "^4.0.0",
    "webpack-virtual-modules": "^0.6.1"
  }
}
